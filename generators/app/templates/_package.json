{
  "name": "<%= themeName %>",
  "version": "1.0.0",
  "description": "<%= themeDescription %>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "watch:css": "sass --no-source-map --watch src/scss:dist/css",
    "compile:css": "sass --no-source-map src/scss:dist/css",
    "postcss": "postcss dist/css/**/*.css -r --no-map",
    "lint:css": "stylelint src/scss",
    "scss:fix": "stylelint \"**/*.scss\" --fix",
    "build:css": "npm-run-all -s lint:css compile:css postcss",
    "watch:js": "babel src/js -d dist/js  --watch",
    "build:js": "babel src/js -d dist/js --no-comments",
    "lint:js": "eslint src/js",
    "js:fix": "eslint src/js --fix",
    "build": "npm-run-all clean build:css build:js",
    "watch": "npm-run-all -p watch:css postcss watch:js",
    "lint": "npm-run-all -p lint:**"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/malabya/drupal-theme-generator"
  },
  "dependencies": {
    "@babel/cli": "^7.21.5",
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    <%_ if (includeBootstrap) { -%>
    "bootstrap": "^5.2.3",
    <%_
    } -%>
    "cssnano": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "postcss-discard-comments": "^6.0.0",
    "postcss-load-config": "^4.0.1",
    "postcss-preset-env": "^8.3.2",
    "rimraf": "^5.0.0",
    "sass": "^1.62.1"
  },
  "devDependencies": {
    "eslint": "^8.40.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-yml": "^1.7.0",
    "prettier": "^2.8.8",
    "stylelint": "^15.6.1",
    "stylelint-config-standard-scss": "^9.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^5.0.0"
  }
}